<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login.RegisterActivity"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.CoordinatorLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ToolbarTheme" />

            <LinearLayout
                android:id="@+id/container_SingUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note_type"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="sans-serif"
                    android:id="@+id/textView4"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"


                    >
                    <TableRow android:layout_height="wrap_content" android:minHeight="@dimen/height_type_image">

                        <ImageButton
                            android:id="@+id/btn_movility"
                            android:src="@mipmap/movility72px"
                            android:layout_height="match_parent"
                            android:background="@color/material_amber"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"

                        />

                        <ImageButton

                            android:id="@+id/btn_eating"
                            android:src="@mipmap/eating72px"
                            android:layout_height="match_parent"
                            android:background="@color/material_green"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                             />

                        <ImageButton
                            android:id="@+id/btn_fall"
                            android:src="@mipmap/caida72px"
                            android:layout_height="match_parent"
                            android:background="@color/material_pink"
                             />
                    </TableRow>

                    <TableRow android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TextView

                            android:text="@string/add_movilidad"
                            android:layout_height="match_parent"
                            android:background="@color/material_amber"
                            android:maxLines="10"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            android:background="@color/material_green"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:text="@string/add_alimentacion"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            android:background="@color/material_pink"
                            android:text="@string/add_caida"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            />
                    </TableRow>


                    <TableRow android:minHeight="@dimen/height_type_image"  android:layout_marginTop="@dimen/activity_vertical_margin">

                        <ImageButton
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:id="@+id/btn_medication"
                            android:src="@mipmap/medication72px"
                            android:layout_height="match_parent"
                            android:background="@color/material_red"
                            />

                        <ImageButton
                            android:id="@+id/btn_health"
                            android:src="@mipmap/ic_insert_emoticon_black_48dp"
                            android:layout_height="match_parent"
                            android:background="@color/material_blue"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                             />

                        <ImageButton

                            android:src="@mipmap/otro72px"
                            android:id="@+id/btn_other"
                            android:layout_height="match_parent"
                            />
                    </TableRow>
                    <TableRow android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TextView

                            android:text="@string/add_medication"
                            android:layout_height="match_parent"
                            android:background="@color/material_red"
                            android:maxLines="10"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            android:background="@color/material_blue"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:text="@string/add_health"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_height="match_parent"
                            android:background="@color/gray"
                            android:text="@string/add_caida"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"

                            />
                    </TableRow>




                    <TableRow android:minHeight="@dimen/height_type_image" android:layout_marginTop="@dimen/activity_vertical_margin">
                        <ImageButton
                            android:id="@+id/btn_changebehaviour"
                            android:src="@mipmap/changebehavior72px"
                            android:layout_height="match_parent"
                            android:background="@color/material_purple"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            />
                    </TableRow>
                    <TableRow >
                        <TextView
                            android:text="@string/add_changebehaviour"
                            android:layout_height="match_parent"
                            android:background="@color/material_purple"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            />
                    </TableRow>





                </TableLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/gray_soft"
                    >

                </View>


                    <EditText
                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/hint_note_description"

                        />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/gray_soft"
                    />
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_note_late"
                        android:textSize="@dimen/small_text_size"
                        android:fontFamily="sans-serif"


                        android:id="@+id/textView3" />

                    <RadioButton
                    android:id="@+id/rdgTardia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/gray_soft"
                    />
             <LinearLayout
                 android:id="@+id/linear_efecto"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginTop="@dimen/activity_vertical_margin"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/txt_note_color"
                     android:textSize="@dimen/small_text_size"
                     android:fontFamily="sans-serif"

                     />

                 <RadioGroup
                     android:orientation="vertical"
                     android:id="@+id/rdgGrupo"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">


                     <RadioButton
                         android:id="@+id/rdgDeterioro"
                         android:text="@string/rdg_deterioro"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/small_text_size"
                         android:fontFamily="sans-serif"
                         android:textColor="@color/orange"

                         android:paddingBottom="@dimen/activity_vertical_margin"
                         android:textStyle="bold"
                         />



                     <RadioButton
                         android:id="@+id/rdgNeutral"
                         android:text="@string/rdg_neutral"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/small_text_size"
                         android:fontFamily="sans-serif"
                         android:paddingBottom="@dimen/activity_vertical_margin"
                         android:textStyle="bold"
                         />

                     <RadioButton
                         android:id="@+id/rdgMejora"
                         android:text="@string/rdg_mejora"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/small_text_size"
                         android:fontFamily="sans-serif"
                         android:buttonTint="@color/semaforo_verde"
                         android:paddingBottom="@dimen/activity_vertical_margin"
                         android:textColor="@color/material_green"
                         android:textStyle="bold"
                         />

                    <TextView
                        android:id="@+id/txt_adverso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si el Efecto al medicamento ha sido adverso, por favor marque:"
                        android:visibility="gone"
                        />
                     <RadioButton
                         android:id="@+id/rdgAdverso"
                         android:text="@string/rdg_adverso"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="@dimen/small_text_size"
                         android:fontFamily="sans-serif"
                         android:textStyle="bold"
                         android:paddingBottom="@dimen/activity_vertical_margin"
                         android:textColor="@color/red_dark"
                         android:visibility="gone"
                         />



                 </RadioGroup>
             </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/gray_soft"
                    android:visibility="gone"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_responsable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_responsable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/txt_note_responsable"

                        />


                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_entre_elementos_loguin"
                    android:text="@string/btn_save"
                    android:background="@color/magenta"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:onClick="saveNote"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    />


                </LinearLayout>


        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>


</ScrollView>