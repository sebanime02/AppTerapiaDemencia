<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- This could be your fragment container, or something -->

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ScrollView xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".principal.reminiscence.DetailReminiscenceActivity"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >




            <LinearLayout

                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbarreminiscence"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        app:theme="@style/ToolbarTheme" />



                </android.support.design.widget.CoordinatorLayout>

                <TextView
                    android:id="@+id/detail_reminiscence_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:lines="2"
                    android:textSize="@dimen/large_title_text_size"
                    android:text="asdas"
                    android:gravity="center_horizontal"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/detail_reminiscence_photo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_reminiscence_photo"
                        android:layout_weight="1"
                        />


                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray_soft"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardElevation="4dp"
                        card_view:cardUseCompatPadding="true"
                        android:padding="@dimen/activity_horizontal_margin"



                        >

                        <TextView
                            android:textSize="@dimen/size_dementia"
                            android:fontFamily="sans-serif"
                            android:id="@+id/detail_reminiscence_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:minHeight="@dimen/height_reminiscence_photo"


                            />

                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </FrameLayout>


</RelativeLayout>