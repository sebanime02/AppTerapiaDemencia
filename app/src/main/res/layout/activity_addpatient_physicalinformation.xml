<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".principal.patientlist.AddPatient2Activity">


    <LinearLayout
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Limitaciones Físicas"
            android:textSize="25sp"
            android:textColor="@color/negro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Califique las limitaciones físicas del paciente, esto será de ayuda para facilitar la experiencia con los ejercicios cognitivos"
            android:textSize="20sp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Visión"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spi_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_vision"/>
        <TextView
            android:text="Escritura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spi_escritura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_vision"/>
        <TextView
            android:text="Dibujo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spi_dibujo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_vision"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button

                android:drawableLeft="@drawable/ic_save_white_24dp"
                android:id="@+id/btn_guardar_paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"/>

            <Button
                android:id="@+id/btn_atras_paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atras"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:text="Paso 2 de 3"
            android:textSize="20dp"
            />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="66"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            style="?android:attr/progressBarStyleHorizontal" />
    </LinearLayout>

</ScrollView>
