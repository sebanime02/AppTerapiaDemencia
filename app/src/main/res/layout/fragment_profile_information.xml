<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".principal.patientprofile.PatientProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_soft"

    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:alpha="0.75"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_banner_profile"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/backgroungreenmaterial2"
        android:gravity="center"
        android:orientation="vertical"



        >
        <ImageView
            android:id="@+id/img_patient_perfil"
            android:layout_width="@dimen/img_patient_profile_size"
            android:layout_height="@dimen/img_patient_profile_size"

            android:layout_gravity="center"

            />
        <TextView

            android:alpha="2"
            android:id="@+id/name_patient_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="@dimen/txt_patient_profile_size_large"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:alpha="2"
                android:id="@+id/age_patient_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_patient_profile_size_medium"
                />
            <TextView

                android:alpha="2"
                android:textStyle="bold"
                android:id="@+id/identity_patient_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cedula"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_patient_profile_size_medium"
                />

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="@color/gray_soft"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/rounded_corner"
           android:elevation="4dp"
           android:padding="16dp"
           android:layout_marginTop="@dimen/activity_vertical_margin"
           android:layout_marginLeft="@dimen/activity_horizontal_margin"
           android:layout_marginRight="@dimen/activity_horizontal_margin"
           >


           <TextView
           android:id="@+id/textview_profile_information"
           android:layout_marginTop="@dimen/activity_vertical_margin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawableLeft="@mipmap/ic_assignment_ind_black_24dp"
           android:textSize="@dimen/medium_text_size"
           android:text="@string/textview_profile_information"
           android:fontFamily="sans-serif"
           android:textColor="@color/gray"
           android:textStyle="bold"
           android:paddingBottom="@dimen/activity_vertical_margin"

           />
            <TextView
            android:layout_below="@id/textview_profile_information"
            android:id="@+id/description_eps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EPS:"
            android:textStyle="bold" android:fontFamily="sans-serif"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/gray"
            android:gravity="center_vertical"></TextView>

           <TextView
           android:layout_below="@id/description_eps"
           android:id="@+id/txt_eps"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Campo vacío"
           android:textSize="@dimen/small_text_size"
           android:gravity="center_vertical"

           />
            <TextView
                android:layout_below="@id/txt_eps"
                android:id="@+id/description_antecedentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ANTECEDENTES:"
                android:textStyle="bold" android:fontFamily="sans-serif"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/gray"
                android:gravity="center_vertical"></TextView>


           <TextView
           android:layout_below="@id/description_antecedentes"
           android:id="@+id/txt_antecedentes"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/small_text_size"
           android:hint="Campo vacío"
           android:gravity="center_vertical"
           android:fontFamily="sans-serif"
           />

            <TextView
                android:layout_below="@id/txt_antecedentes"
                android:id="@+id/description_sindromes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SINDROMES Y PROBLEMAS:"
                android:textStyle="bold" android:fontFamily="sans-serif"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/gray"
                android:gravity="center_vertical"></TextView>
           <TextView
           android:id="@+id/txt_sindromes"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Campo vacío"
           android:textSize="@dimen/small_text_size"
           android:gravity="center_vertical"
           android:layout_below="@+id/description_sindromes"
           android:fontFamily="sans-serif"
           />
            <TextView
                android:layout_below="@id/txt_sindromes"
                android:id="@+id/description_observaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OBSERVACIONES:"
                android:textStyle="bold" android:fontFamily="sans-serif"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/gray"
                android:gravity="center_vertical"></TextView>
           <TextView
           android:layout_below="@id/description_observaciones"
           android:id="@+id/txt_observaciones"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/small_text_size"
            android:fontFamily="sans-serif"
           android:hint="Campo vacío"

           android:gravity="center_vertical"
           />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="@color/gray_soft"
            card_view:cardUseCompatPadding="true"
            >

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:elevation="4dp"
                android:padding="16dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
            >
                <TextView
                    android:id="@+id/txt_info_card"
                    android:text="@string/textview_profile_physics"
                    android:textSize="@dimen/medium_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:drawableLeft="@mipmap/ic_accessible_black_36dp"
                    android:paddingBottom="@dimen/activity_vertical_margin"

                    />


                <TextView

                    android:id="@+id/txt_vision"
                    android:layout_below="@id/txt_info_card"
                    android:text="Campo Vacío"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/ic_remove_red_eye_black_24dp"
                    android:textSize="@dimen/small_text_size"
                    android:fontFamily="sans-serif"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    />



                <TextView

                    android:id="@+id/txt_escritura"
                    android:text="Campo Vacío"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/txt_vision"
                    android:drawableLeft="@mipmap/edit"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                     />

                <TextView

                    android:id="@+id/txt_dibujo"
                    android:text="Campo Vacío"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/txt_escritura"
                    android:drawableLeft="@mipmap/scuadra"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>
</ScrollView>