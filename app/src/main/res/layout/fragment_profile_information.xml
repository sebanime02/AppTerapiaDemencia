<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context=".principal.patientprofile.PatientProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_soft"

    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:alpha="0.75"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_banner_profile"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/backgroungreenmaterial2"
        android:gravity="center"
        android:orientation="vertical"



        >
        <ImageView
            android:id="@+id/img_patient_perfil"
            android:layout_width="@dimen/img_patient_profile_size"
            android:layout_height="@dimen/img_patient_profile_size"

            android:layout_gravity="center"

            />
        <TextView

            android:alpha="2"
            android:id="@+id/name_patient_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="@dimen/txt_patient_profile_size_large"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:alpha="2"
                android:id="@+id/age_patient_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_patient_profile_size_medium"
                />
            <TextView

                android:alpha="2"
                android:textStyle="bold"
                android:id="@+id/identity_patient_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cedula"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_patient_profile_size_medium"
                />

        </LinearLayout>
        <TextView

            android:alpha="2"
            android:id="@+id/sexo_patient_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femenno"
            android:textStyle="bold"
            android:textSize="@dimen/txt_patient_profile_size_medium"
            android:textColor="@color/white"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_corner"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            >

                <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                   >


                        <TextView
                        android:id="@+id/textview_profile_information"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_assignment_ind_black_24dp"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/textview_profile_information"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:drawablePadding="@dimen/activity_horizontal_margin"

                        />


                    <TextView
                        android:id="@+id/description_escolaridad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ESCOLARIDAD"
                        android:textStyle="bold" android:fontFamily="sans-serif"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"

                        />

                    <TextView

                        android:id="@+id/txt_escolaridad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Campo vacío Escolaridad"
                        android:textSize="@dimen/small_text_size"
                        android:gravity="center_vertical"

                        />


                    <TextView
                        android:id="@+id/description_institucionalizado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Institucionalizado"
                        android:textStyle="bold" android:fontFamily="sans-serif"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"

                        />

                    <TextView

                        android:id="@+id/txt_institucionalizado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Campo vacío Item Institucionalizado"
                        android:textSize="@dimen/small_text_size"
                        android:gravity="center_vertical"

                        />


                    <TextView
                        android:id="@+id/description_eps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EPS:"
                        android:textStyle="bold" android:fontFamily="sans-serif"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"

                       />

                    <TextView

                        android:id="@+id/txt_eps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Campo vacío eps"
                        android:textSize="@dimen/small_text_size"
                        android:gravity="center_vertical"

                        />
                    <TextView

                        android:id="@+id/description_antecedentes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ANTECEDENTES:"
                        android:textStyle="bold" android:fontFamily="sans-serif"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"></TextView>

                    <TextView
                        android:id="@+id/txt_antecedentes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text_size"
                        android:hint="Campo vacío antecedentes"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif"

                        />
                    <TextView

                        android:id="@+id/description_sindromes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SINDROMES Y PROBLEMAS:"
                        android:textStyle="bold" android:fontFamily="sans-serif"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"></TextView>
                   <TextView
                        android:id="@+id/txt_sindromes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Campo vacío sindromes"
                        android:textSize="@dimen/small_text_size"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/description_sindromes"
                        android:fontFamily="sans-serif"
                        />
                    <TextView
                        android:layout_below="@id/txt_sindromes"
                        android:id="@+id/description_observaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OBSERVACIONES:"
                        android:textStyle="bold" android:fontFamily="sans-serif"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"/>
                   <TextView
                   android:layout_below="@id/description_observaciones"
                   android:id="@+id/txt_observaciones"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/small_text_size"
                    android:fontFamily="sans-serif"
                   android:hint="Campo vacío observaciones"

                   android:gravity="center_vertical"
                   />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/negro"
                        ></View>
                    <LinearLayout
                        android:id="@+id/minimentalcontainer"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_corner"
                        android:weightSum="3"
                        android:layout_gravity="center_horizontal"
                        >


                        <TextView
                            android:id="@+id/mec_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="@dimen/extra_large_text_size"

                            android:gravity="center_horizontal"
                            android:textColor="@color/colorPrimary"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/mec_date"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"


                                />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:text="@string/txt_last_mec"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_more_minimental"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_button_primary_dark"
                        android:text="@string/txt_see_more"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_text_size"
                        />

                    <LinearLayout
                        android:id="@+id/containerLawton"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_fast"



                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"

                        >

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/puntajeLawton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/large_title_text_size"
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark"

                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/small_text_size"
                                    android:text="Escala de Actividades Instrumentales (LAWTON Y BRODY)"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:id="@+id/comentarioLawton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/medium_text_size"
                                    />


                            </LinearLayout>



                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_more_lawton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/corner_button_primary_dark"
                            android:text="@string/txt_see_more"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_text_size"


                            />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                    <TextView
                        android:id="@+id/txt_info_card"
                        android:text="@string/textview_profile_physics"
                        android:layout_marginTop="14dp"
                        android:textSize="@dimen/medium_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:drawableLeft="@mipmap/ic_accessible_black_36dp"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:drawablePadding="@dimen/activity_horizontal_margin"

                        />

                    <TextView

                        android:id="@+id/txt_vision"

                        android:text="Campo Vacío"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/ic_remove_red_eye_black_24dp"
                        android:textSize="@dimen/small_text_size"
                        android:fontFamily="sans-serif"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        />



                    <TextView

                        android:id="@+id/txt_escritura"
                        android:text="Campo Vacío"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/small_text_size"
                        android:fontFamily="sans-serif"
                        android:drawableLeft="@mipmap/edit"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        />

                    <TextView

                        android:id="@+id/txt_dibujo"
                        android:text="Campo Vacío"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/small_text_size"
                        android:fontFamily="sans-serif"
                        android:drawableLeft="@mipmap/scuadra"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:drawablePadding="@dimen/activity_horizontal_margin"
                        />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"

                >

    <LinearLayout
        android:id="@+id/containerBlessed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_score"

        android:elevation="4dp"
        android:padding="16dp"


        android:orientation="vertical"

        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <TextView
                android:id="@+id/puntajeBlessed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/large_title_text_size"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"

                />


            <LinearLayout


            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:text="TEST DEMENCIA DE BLESSED"
                android:textStyle="bold"
                android:id="@+id/textView5" />


            <TextView
                android:id="@+id/demenciaBlessed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"

                />


         </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_more_blessed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_button_primary_dark"
            android:text="@string/txt_see_more"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />
    </LinearLayout>


                <LinearLayout
                    android:id="@+id/containerFAST"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_fast"
                    android:elevation="4dp"


                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="4"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/puntajeFAST"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/large_title_text_size"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            />

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"

                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/small_text_size"
                                android:text="ESCALA DE ALZHEIMER (FAST-GDS)"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/demenciaFAST"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/medium_text_size"

                                />



                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text_size"
                        android:text="@string/txt_fast_note_information"
                        />
                    <Button
                        android:id="@+id/btn_more_fast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/medium_text_size"
                        android:text="@string/txt_see_more"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textColor="@color/white"
                        android:background="@drawable/corner_button_primary_dark"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/containerDownTown"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_score"
                    android:elevation="4dp"


                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/puntajeDowntown"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/large_title_text_size"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"

                            />

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"

                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/small_text_size"
                                android:text="RIESGO DE CAIDAS (ESCALA DOWNTOWN)"
                                android:textStyle="bold"

                                />

                            <TextView
                                android:id="@+id/comentarioDowntown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/medium_text_size"


                                />


                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_more_downton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_button_primary_dark"
                        android:text="@string/txt_see_more"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_text_size"

                        />
                </LinearLayout>




            </LinearLayout>

    </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="4"
                >



            <Spinner
                android:id="@+id/spi_blessed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"
                >

            </Spinner>
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/blessed_graph_title"
                    android:textSize="@dimen/medium_text_size"
                    />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btnMoreStatistics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_button_primary_dark"
                    android:text="@string/blessed_more_statistics"
                    android:textColor="@color/white"
                    android:drawableLeft="@mipmap/ic_equalizer_white_24dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:lines="2"
                    android:textSize="@dimen/medium_text_size"


                    />
            </LinearLayout>


            <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/blessedChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"

                    />




        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</ScrollView>