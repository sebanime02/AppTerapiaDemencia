<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_banner_profile"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"


        >
        <ImageView
            android:id="@+id/img_patient_profile"
            android:layout_width="@dimen/img_patient_profile_size"
            android:layout_height="@dimen/img_patient_profile_size"
            android:background="@color/accent_color"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/name_patient_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="23sp"
            />
        <TextView
            android:id="@+id/age_patient_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18sp"
            />




    </LinearLayout>





</LinearLayout>
</ScrollView>