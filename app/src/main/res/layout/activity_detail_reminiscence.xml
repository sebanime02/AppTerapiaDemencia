<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_reminiscence"
        android:background="@color/colorPrimary"

        />


                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbarreminiscence"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:background="@color/colorPrimaryDark"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        app:theme="@style/ToolbarTheme" />



                </android.support.design.widget.CoordinatorLayout>

                <ScrollView xmlns:tools="http://schemas.android.com/tools"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    tools:context=".principal.reminiscence.DetailReminiscenceActivity"
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="@dimen/medium_text_size"
                    android:text="@string/txt_detail_reminiscence"/>

                    <TextView
                    android:id="@+id/detail_reminiscence_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/negro"
                    android:lines="2"
                    android:textSize="@dimen/large_title_text_size"
                    android:text="asdas"
                    android:gravity="center_horizontal"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/detail_reminiscence_photo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_reminiscence_photo"
                        android:layout_weight="1"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_soft"




                        >

                        <TextView
                            android:textSize="@dimen/size_dementia"
                            android:fontFamily="sans-serif"
                            android:id="@+id/detail_reminiscence_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            android:paddingRight="3dp"
                            android:paddingLeft="3dp"
                            android:minHeight="@dimen/height_reminiscence_photo"



                            />

                    </LinearLayout>

                </LinearLayout>
                    </LinearLayout>
                </ScrollView>

</RelativeLayout>